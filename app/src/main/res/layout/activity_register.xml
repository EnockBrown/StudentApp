<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:textSize="12sp"
        android:text="@string/registration_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtPhone"
            android:hint="Phone "
            android:text="123456789"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/black"/>
        <EditText
            android:id="@+id/edtName"
            android:hint="Name"
            android:text="Enock"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/black"/>
        <EditText
            android:id="@+id/edtEmail"
            android:hint="Email Address"
            android:text="enocko@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/black"/>
        <EditText
            android:id="@+id/edtPassword"
            android:hint="Password"
            android:text="123456"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/black"/>
        <EditText
            android:id="@+id/edtGender"
            android:hint="Gender"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="male"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/black"/>
        <EditText
            android:id="@+id/edtAdmissionNumber"
            android:hint="Admision Number"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            android:inputType="text"
            android:text="CIT-227-022/2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/black"/>
        <EditText
            android:id="@+id/edtCampus"
            android:hint="Campus"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MMU"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/black"/>
        <EditText
            android:id="@+id/edtFaculty"
            android:hint="Faculty"
            android:text="CIT"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/black"/>

        <Button
            android:id="@+id/btnsignup"
            android:text="Sign Up"
            android:layout_weight="1"
            android:clickable="true"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/btn_follow_style"
            android:backgroundTint="@color/darkbluedark"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Have Account?"
            android:textColor="@color/edit_profile"
            android:textAlignment="center"
            android:background="@drawable/rounded"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
</LinearLayout>